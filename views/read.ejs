<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>

</head>
<body>
    <div class="w-full h-screen bg-zinc-900 text-white p-10">
        <a class="text-blue-500" href="/">Back to home</a>
        <h1 class="text-3xl mb-3 mt-10 tracking-tighter">Read User</h1>
        
       <div class="flex gap-3 flex-wrap">
        <% users.forEach(function(user){ %>
            <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                <div class="w-full h-72 rounded-lg bg-zinc-700 overflow-hidden"> 
                <img class="w-full h-full object-top" src="<%= user.image %>" alt="">    
                </div>
                    <h3 class="text-xl mt-3 tracking-tighter"><%= user.name %></h3>
                    <h5 class="text-zinc-500"><%= user.email%></h5>
                    <div class="flex gap-3 mt-10">
                        <a class="" href="/edit/<%= user._id%>">Edit user</a>
                        <a class="text-red-500" href="/delete/<%= user._id %>">Delete user</a>
                    </div>           
            </div>
            <% }) %>

       
       </div>
 

    </div>
</body>
</html>